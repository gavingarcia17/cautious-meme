{
  "name": "text-editor",
  "version": "1.0.0",
  "description": "A simple text editor PWA",
  "scripts": {
    "start": "node Develop/server/server.js",
    "build": "webpack --mode production --config Develop/client/webpack.config.js",
    "client": "cd Develop/client && npm start",
    "server": "cd Develop/server && npm start",
    "start:dev": "concurrently \"npm run server\" \"npm run client\"",
    "install": "npm install --prefix Develop/client && npm install --prefix Develop/server"
  },
  "dependencies": {
    "concurrently": "^6.2.1"
  }
}